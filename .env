# Environment configuration
FLASK_ENV=production
FLASK_APP=wsgi.py

# Flask settings
SECRET_KEY=your-secret-key-change-this
DEBUG=False
HOST=0.0.0.0
PORT=5000

# Modem settings
MODEM_PORT=/dev/ttyUSB2
MODEM_BAUDRATE=115200
MODEM_PIN=
DEFAULT_USSD_STRING=#357#

# Server settings
SERVER_URL=http://localhost:5000/sms
SOCKET_RETRY_INTERVAL=3
SMS_PROCESS_INTERVAL=10

# Logging settings
LOG_DIR=/var/log/sms_gateway
LOG_LEVEL=INFO

# Security settings
JWT_EXPIRY_HOURS=24
VERIFICATION_CODE_TTL=300

# Application paths
INSTANCE_DIR=/opt/sms_gateway